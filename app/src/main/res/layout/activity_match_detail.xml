<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llRoot"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        app:title="@string/football_club" />

    <ProgressBar
        android:id="@+id/pbMatchDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvDate"
                        style="@style/TextParagraph3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        tools:text="25 Jan 2015" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvVs"
                        style="@style/TextParagraph5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/vs"
                        app:layout_constraintBottom_toBottomOf="@+id/tvScoreHome"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvScoreHome" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvScoreHome"
                        style="@style/Header1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        app:layout_constraintRight_toLeftOf="@id/tvVs"
                        app:layout_constraintTop_toBottomOf="@id/tvDate"
                        tools:text="2" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvScoreAway"
                        style="@style/Header1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tvScoreHome"
                        app:layout_constraintLeft_toRightOf="@id/tvVs"
                        app:layout_constraintTop_toTopOf="@id/tvScoreHome"
                        tools:text="5" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivHomeLogo"
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/tvDate"
                        app:layout_constraintTop_toBottomOf="@id/tvDate" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvHomeTeam"
                        style="@style/TextParagraph3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="4dp"
                        app:layout_constraintEnd_toStartOf="@+id/tvAwayTeam"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/tvAwayTeam"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivHomeLogo"
                        app:layout_constraintVertical_bias="0.5"
                        tools:text="Persib" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivAwayLogo"
                        android:layout_width="0dp"
                        android:layout_height="84dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintLeft_toRightOf="@id/tvDate"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDate" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvAwayTeam"
                        style="@style/TextParagraph3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="4dp"
                        android:gravity="right"
                        app:layout_constraintLeft_toRightOf="@id/tvHomeTeam"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/ivAwayLogo"
                        tools:text="Persija" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvAwayForm"
                        style="@style/TextParagraph4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintLeft_toLeftOf="@id/tvAwayTeam"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvAwayTeam"
                        tools:text="4-3-2-1" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvHomeForm"
                        style="@style/TextParagraph4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/tvHomeTeam"
                        app:layout_constraintTop_toBottomOf="@id/tvHomeTeam"
                        tools:text="4-3-2-1" />


                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvGoalTitle"
                        style="@style/TextParagraph3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/goals"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvGoalsHome"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/tvGoalsAway"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvGoalTitle"
                        tools:text="Evan Dimas : 40\nEvanajskdfhd skjfh s\naskhdf kjhsdkf\n jkashdkfja sdf\nsahd fkjsdf" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvGoalsAway"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvGoalsHome"
                        app:layout_constraintTop_toBottomOf="@id/tvGoalTitle"
                        tools:text="Evan Dimas : 40\nEvanajskdfhd skjfh \naskhdf kjhsdkf\n jkashdkfja sdf\nsahd fkjsdf" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvShotsTitle"
                        style="@style/TextParagraph3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:text="@string/shots"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvShotsHome"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/tvShotsAway"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvShotsTitle"
                        tools:text="7" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvShotsAway"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvShotsHome"
                        app:layout_constraintTop_toBottomOf="@id/tvShotsTitle"
                        tools:text="3" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvLineupsTitle"
                        style="@style/TextParagraph3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lineups"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvGoalKeeperTitle"
                        style="@style/TextParagraph4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="@string/goal_keeper"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLineupsTitle" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvGoalKeeperHome"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/tvGoalKeeperAway"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvGoalKeeperTitle"
                        tools:text="7" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvGoalKeeperAway"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvGoalKeeperHome"
                        app:layout_constraintTop_toBottomOf="@id/tvGoalKeeperTitle"
                        tools:text="3" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvMidfieldTitle"
                        style="@style/TextParagraph4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/midfield"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvGoalKeeperHome" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvMidfieldHome"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/tvMidfieldAway"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMidfieldTitle"
                        tools:text="7" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvMidfieldAway"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvMidfieldHome"
                        app:layout_constraintTop_toBottomOf="@id/tvMidfieldTitle"
                        tools:text="3" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvForwardTitle"
                        style="@style/TextParagraph4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/forward"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMidfieldHome" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvForwardHome"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/tvForwardAway"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvForwardTitle"
                        tools:text="7" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvForwardAway"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvForwardHome"
                        app:layout_constraintTop_toBottomOf="@id/tvForwardTitle"
                        tools:text="3" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvSubstituteTitle"
                        style="@style/TextParagraph4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/substitute"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvForwardHome" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvSubstituteHome"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/tvSubstituteAway"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSubstituteTitle"
                        tools:text="7" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvSubstituteAway"
                        style="@style/TextParagraph5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvSubstituteHome"
                        app:layout_constraintTop_toBottomOf="@id/tvSubstituteTitle"
                        tools:text="3" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>